# ===========================================
# Jarvis AI Assistant - Environment Configuration
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o                    # Primary reasoning model
OPENAI_FAST_MODEL=gpt-4o-mini          # Fast mode model
EMBEDDING_MODEL=text-embedding-3-small

# Database Paths
CHROMA_DB_PATH=./chroma_db
UPLOAD_DIR=./uploads

# Server Configuration
ENVIRONMENT=development                 # development or production
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
MAX_FILE_SIZE=10485760                  # 10MB in bytes

# Voice Pipeline (Optional)
# Deepgram STT - https://deepgram.com
DEEPGRAM_API_KEY=

# ElevenLabs TTS - https://elevenlabs.io
ELEVENLABS_API_KEY=

# Chatterbox TTS (if using)
CHATTERBOX_API_KEY=

# Memory System
# NEO4J_URI=bolt://localhost:7687       # For production Neo4j
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=

# Rate Limiting
RATE_LIMIT_REQUESTS=100                 # Max requests per minute
RATE_LIMIT_WINDOW=60                    # Window in seconds
